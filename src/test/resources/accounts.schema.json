{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "array",
  "items": {
   "type": "object",
   "required": [
      "id",
      "name",
      "number",
      "balance",
      "currency"
    ],
    "additionalProperties": false,
    "properties": {
      "id": {
        "type": "integer"
      },
      "name": {
        "type": "string",
        "minLength": 1
      },
      "number": {
        "type": "string",
        "minLength": 1
      },
      "balance": {
        "type": "number"
      },
      "currency": {
        "type": "string",
        "enum": ["RUR", "USD"]
      }
    }
  }
}
